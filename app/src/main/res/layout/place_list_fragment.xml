<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:id="@+id/header_detail_frame"
            android:layout_height="200dp">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgPoster"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gray_overlay"/>

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/profile_img"
                android:scaleType="centerCrop" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/header_detail"
                android:layout_marginStart="150dp">

                <TableRow >
                    <LinearLayout
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="4"
                        android:paddingTop="20dp"
                        android:paddingRight="30dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:src="@drawable/ic_call_white_48dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_gravity="center_vertical|left"
                            android:padding="5dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/place_phone_number"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical|center_horizontal|center"
                            android:padding="5dp"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rounded_corner"
                            android:id="@+id/place_open_now"/>
                    </LinearLayout>
                </TableRow>
                <TableRow >
                    <LinearLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp" >
                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.1"
                                style="?android:attr/ratingBarStyleIndicator"
                                android:id="@+id/place_rating_bar"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:padding="5dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/place_rating_value"/>
                    </LinearLayout>
                </TableRow>
                <TableRow >
                    <LinearLayout
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="4"
                        android:paddingRight="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical|left"
                            android:padding="5dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/place_address"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/order_status_card"
            android:layout_alignTop="@+id/header_detail_frame"
            android:layout_margin="5dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_update_white_48dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="Order Status"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:padding="10dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:padding="5dp"
                android:shrinkColumns="*">
                <TableRow>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:tint="@color/red"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_alarm_add_white_48dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:layout_weight="50"
                        android:text="Incoming"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:id="@+id/order_incoming"/>
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimary"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_alarm_white_48dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="50"
                        android:text="Processing"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:id="@+id/order_processing"/>

                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:tint="@color/green"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_alarm_on_white_48dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_weight="50"
                        android:text="Completed"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_weight="50"
                        android:textSize="17sp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:id="@+id/order_complete"/>
                </TableRow>

                <TableRow>
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:src="@drawable/ic_alarm_off_white_48dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="50"
                        android:text="Cancelled"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:padding="5dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:layout_weight="50"
                        android:textSize="18sp"
                        android:gravity="start"
                        android:padding="5dp"
                        android:id="@+id/order_cancelled"/>
                </TableRow>

            </TableLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/order_incoming_card"
            android:layout_alignTop="@+id/order_status_card"
            android:layout_margin="5dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorAccent">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:src="@drawable/ic_alarm_add_white_48dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:text="Incoming Orders"
                    android:textSize="20sp"
                    android:gravity="start"
                    android:padding="10dp" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:padding="5dp"
                android:shrinkColumns="*"
                android:id="@+id/order_incoming_list">
            </TableLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>